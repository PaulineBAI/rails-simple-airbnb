<div class="cards">
  <h2>All our flats (<%= @flats.count %>)</h2>
  <div class="row mt-4">
    <% @flats.each do |flat| %>
      <div class="col-sm-4">
        <div class="card bg-light mb-4 px-0" style="height: 40vh;">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text">
              <%= flat.address %>
            </p>
            <i class="fas fa-user-friends mr-2"></i><%= flat.number_of_guests %>
            <i class="fas fa-euro-sign ml-5 mr-2"></i><%= flat.price_per_night %>
          </div>
          <div class="card-footer bg-white">
            <%= link_to 'More info', flat_path(flat.id) %>
            <%= link_to 'Edit', edit_flat_path(flat.id), class: 'ml-3 text-warning' %>
            <%= link_to 'Remove', flat_path(flat.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'ml-3 text-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>


